<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/radius_pop_up"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeni bir aya başlamak istediğinize emin misiniz? Geçmiş Tüm veriler silinecek!"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textColor="#314295"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/new_month_yes_button"
            android:onClick="newMonthYesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="5"
            android:text="EVET"
            android:background="@drawable/button_bck"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/new_month_no_button"
            android:onClick="newMonthNoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="5"
            android:text="HAYIR"
            android:background="@drawable/button_bck"
            android:textColor="#fff"/>


    </LinearLayout>




</LinearLayout>